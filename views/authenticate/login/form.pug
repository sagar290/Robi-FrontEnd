.mdl-layout.mdl-js-layout.mdl-color--grey-100
  main.mdl-layout__content
    .mdl-card.mdl-shadow--6dp
      .mdl-card__title.mdl-color--primary.mdl-color-text--white
        h2.mdl-card__title-text Robi Training
      .mdl-card__supporting-text
        form(action='/login' method='post')
          .mdl-textfield.mdl-js-textfield
            input#username.mdl-textfield__input(name='username' type='text')
            label.mdl-textfield__label(for='username') Username
          .mdl-textfield.mdl-js-textfield
            input#userpass.mdl-textfield__input(name='password' type='password')
            label.mdl-textfield__label(for='userpass') Password
          button.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(type='submit') Log in
