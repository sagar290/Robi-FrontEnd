.mdl-layout.mdl-js-layout.mdl-color--grey-100
  main.mdl-layout__content
    .mdl-card.mdl-shadow--6dp
      .mdl-card__title.mdl-color--primary.mdl-color-text--white
        h2.mdl-card__title-text Robi Training
      .mdl-card__supporting-text
        form(action='/register' method='post')
          .mdl-textfield.mdl-js-textfield
            input#username.mdl-textfield__input(required name='username' type='text')
            label.mdl-textfield__label(for='username') Username
          .mdl-textfield.mdl-js-textfield
            input#userpass.mdl-textfield__input(required name='password' type='password')
            label.mdl-textfield__label(for='userpass') Password
          .mdl-selectfield.mdl-js-selectfield
            select#professsion1.mdl-selectfield__select(name='region')
              option(value='Dhaka') Dhaka
              option(value='Sylhet') Sylhet
              option(value='Khulna') Khulna
              option(value='Rajshahi') Rajshahi
              option(value='Barishal') Barishal
              option(value='Chittagong') Chittagong
            label.mdl-selectfield__label(for='professsion1') Profession

          button.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(type='submit') Sign Up
