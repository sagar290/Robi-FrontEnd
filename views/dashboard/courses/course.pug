- var progress = 0;
- var didCourse = user.courses.length > 0 && user.courses[index].course == cours.id;
if(didCourse)
    progress = user.courses[index].progress;
.course-card.demo-card-square.mdl-card.mdl-shadow--2dp
  .mdl-card__title.mdl-card--expand
    img.course-image(src=cours.thumbnail_image, alt='basic-sales')
  .course-info-holder
    span.course-text=cours.course_name
  .course-info-holder.progress-holder
    h6 #{progresses[index]}%
    .mdl-progress.mdl-js-progress(id='p'+index)
    script.
      document.querySelector('#p'+#{index}).addEventListener('mdl-componentupgraded', function() {
      this.MaterialProgress.setProgress(#{progresses[index]});
      });
  .mdl-card__actions.course-info-holder.mdl-card--border
    a.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(href='dashboard/courses/'+cours.course_name)
      if progresses[index] != 0
          | Continue Course
      else
          | Start Course
